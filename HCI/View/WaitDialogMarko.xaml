<Window x:Class="HCI.View.WaitDialogMarko"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:HCI.View.Control"
    Title="Wait" Height="200" Width="300"
    WindowStartupLocation="CenterOwner" WindowStyle="None">
    <StackPanel Orientation="Vertical">
        <Rectangle Height="15" Fill="White"/>
        <TextBlock HorizontalAlignment="Center">Downloading data, please wait...</TextBlock>
        <Rectangle Height="20" Fill="White"/>
        <control:LoadingAnimation HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</Window>
