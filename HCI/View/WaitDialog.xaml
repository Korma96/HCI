<Window x:Class="HCI.View.WaitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI.View"
        mc:Ignorable="d"
        Title="WaitDialog" Height="150" Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ProgressBar Grid.Row="0" Grid.Column="0" x:Name="progressBar1" Value="0" Maximum="100" Margin="0,12"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Downloading data, please wait..."/>
    </Grid>
</Window>
