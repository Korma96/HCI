<Window x:Class="HCI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200"
        xmlns:VM="clr-namespace:HCI.ViewModel">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
            </StatusBar>
            <DockPanel Name="JovoGraphic">
                <WrapPanel DockPanel.Dock="Top">
                    <TextBlock Background="LightGreen">Title of series:</TextBlock>
                    <TextBox Name="titleOfSeries" Width="150" ></TextBox>
                    <Button Click="Button_Dodaj_Click">Dodaj</Button>
                    <Separator Width="20"/>
                    <Button Click="Button_DodajUNovomProzoru_Click">Dodaj u novom prozoru</Button>
                    <Separator Width="20"/>
                    <RadioButton GroupName="Group1" Name="rbOpen" Content="Open" IsChecked="True" Click="rbOpen_Click"/>
                    <RadioButton GroupName="Group1" Name="rbHigh" Content="High" Click="rbHigh_Click"/>
                    <RadioButton GroupName="Group1" Name="rbLow" Content="Low" Click="rbLow_Click"/>
                    <RadioButton GroupName="Group1" Name="rbClose" Content="Close" Click="rbClose_Click"/>
                    <RadioButton GroupName="Group1" Name="rbVolume" Content="Volume" Click="rbVolume_Click"/>
                    <Separator Width="20"/>
                    <ComboBox Name="TimeSeriesTypeComboBox" IsEditable="False" SelectionChanged="TimeSeriesType_ComboBox_DataContextChanged">
                        <ComboBoxItem>INTRADAY</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">DAILY</ComboBoxItem>
                        <ComboBoxItem>WEEKLY</ComboBoxItem>
                        <ComboBoxItem>MONTHLY</ComboBoxItem>
                    </ComboBox>
                </WrapPanel>
                <DockPanel DockPanel.Dock="Bottom">
                    <oxy:PlotView Name="PlotView" Model="{Binding MyModel}" />
                </DockPanel>
            </DockPanel>
            <Grid DockPanel.Dock="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="0" Name="MarkoSearch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Grid.Row="0"></TextBox>
                    <Button Grid.Column="1" Grid.Row="0">Search</Button>
                </Grid>
                <DataGrid x:Name="StatisticsTable" HorizontalAlignment="Left" Height="656" Margin="10,40,0,0" VerticalAlignment="Top" Width="438" RenderTransformOrigin="0.493,0.447" SelectionChanged="StatisticsTable_SelectionChanged" Grid.Row="2">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="DarkGray"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>


                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="-0.181"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.502"/>
                        </TransformGroup>
                    </DataGrid.RenderTransform>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="type" Binding="{Binding value}" Width="50"/>
                        <DataGridTextColumn Header="name" Binding="{Binding value}" Width="50"/>
                        <DataGridTextColumn Header="highest" Binding="{Binding highest}" Width="50"/>
                        <DataGridTextColumn Header="lowest" Binding="{Binding highest}" Width="50"/>
                        <DataGridTextColumn Header="median" Binding="{Binding median}" Width="50"/>
                        <DataGridTextColumn Header="mode" Binding="{Binding rsquare}" Width="50"/>
                        <DataGridTextColumn Header="exp" Binding="{Binding lowest}" Width="50"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
    